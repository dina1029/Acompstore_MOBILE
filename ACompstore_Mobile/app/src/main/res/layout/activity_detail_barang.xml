<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pActivity.DetailBarangActivity">
        <androidx.core.widget.NestedScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/debar_image"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:background="#F2F2F2"
                        android:src="@drawable/flashdisk"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/debar_btback"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@drawable/ic_arrowback"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageButton
                        android:id="@+id/debar_btcart"
                        android:layout_margin="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_cartgray"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cltop1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/debar_nama"
                            android:text="Kabel data Amino type micro USB"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginRight="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/debar_harga"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/debar_harga"
                            android:text="Rp 50.000"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="15sp"
                            android:textColor="@color/oldpurple"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <androidx.cardview.widget.CardView
                            app:layout_constraintTop_toBottomOf="@id/debar_harga"
                            app:layout_constraintRight_toRightOf="parent"
                            app:cardCornerRadius="5dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@color/younggray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/debar_stok"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text="70 stok"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="10sp"
                                android:textColor="#404040"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/debar_terjual"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/debar_nama"
                            android:textColor="@color/oldgray"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="10dp"
                            android:textSize="11sp"
                            android:padding="7dp"
                            android:text="0 Terjual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <RelativeLayout
                        android:id="@+id/cltop2"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/cltop1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/younggray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        app:layout_constraintTop_toBottomOf="@id/cltop2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/desc"
                            android:text="Description"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:textColor="#424242"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/debar_description"
                            app:layout_constraintTop_toBottomOf="@id/desc"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/oldgray"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Kabel data micro usb yang sudah memiliki fitur fast charging. Membuat hp anda lebih cepat  ketika melakukan charging"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/cate"
                            android:text="Category"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:textColor="#424242"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@id/debar_description"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/debar_rckategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cate"
                            tools:listitem="@layout/cv_detailbarang" />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            app:layout_constraintTop_toBottomOf="@id/debar_rckategori"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/jml"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="Jumlah"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginLeft="20dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/jml"
                                android:background="@drawable/radius25"
                                android:backgroundTint="@color/oldgray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/debar_minus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:paddingLeft="10dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/debar_jumlahbarang"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="1"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/debar_minus"
                                    app:layout_constraintRight_toLeftOf="@id/debar_plus"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/debar_plus"
                                    android:text="+"
                                    android:textSize="16sp"
                                    android:paddingRight="10dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_bold"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/debar_jumlahbarang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/younggray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Total harga"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="10sp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/oldgray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/debar_totalharga"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="17sp"
                            android:textColor="@color/oldpurple"
                            android:layout_marginLeft="10dp"
                            android:text="Rp 25.000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_weight="1"
                    android:id="@+id/debar_btcheckout"
                    android:backgroundTint="@color/oldpurple"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:padding="15dp"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    android:insetLeft="0dp"
                    android:text="AddtoCart"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/ic_addcart"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
