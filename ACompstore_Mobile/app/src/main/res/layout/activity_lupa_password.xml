<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pActivity.LupaPasswordActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cltoplp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/regal_btback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_arrowback"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtForget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Forgot Password"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ic_forgett"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_forget"
            android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cltoplp"
            tools:layout_editor_absoluteY="110dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/jdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_forgett"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_black"
            android:textSize="17sp"
            android:text="Cara Mengganti Password : "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_light"
            android:textSize="15sp"
            android:text="1. "
            app:layout_constraintRight_toLeftOf="@id/txt1"
            app:layout_constraintTop_toBottomOf="@id/jdl"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/poppins_light"
            android:text="Chat ke admin dengan klik tombol dibawah."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/no1"
            app:layout_constraintTop_toBottomOf="@id/jdl"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_light"
            android:textSize="15sp"
            android:text="2. "
            app:layout_constraintRight_toLeftOf="@id/txt1"
            app:layout_constraintTop_toBottomOf="@id/no1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/poppins_light"
            android:text="Masukkan dengan format Email, no HP, nama, dan password yang diinginkan untuk diganti."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/no2"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/no3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_light"
            android:textSize="15sp"
            android:text="3. "
            app:layout_constraintRight_toLeftOf="@id/txt3"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/poppins_light"
            android:text="Admin akan melakukan check pada akunmu."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/no3"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/no4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppins_light"
            android:text="4. "
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintRight_toLeftOf="@id/txt4"
            app:layout_constraintTop_toBottomOf="@id/no3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/poppins_light"
            android:text="Tunggu hingga proses selesai."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintLeft_toRightOf="@id/no4"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/no5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_light"
            android:textSize="15sp"
            android:text="5. "
            app:layout_constraintRight_toLeftOf="@id/txt4"
            app:layout_constraintTop_toBottomOf="@id/no4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/poppins_light"
            android:text="Admin akan menghubungi anda dengan password yang baru."
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/no5"
            app:layout_constraintTop_toBottomOf="@id/txt4"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_admin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/radius10"
            android:backgroundTint="@color/oldpurple"
            android:fontFamily="@font/poppins_bold"
            android:text="Chat Admin"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/txt5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>