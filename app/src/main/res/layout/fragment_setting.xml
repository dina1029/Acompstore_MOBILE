<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pFragment.SettingFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relast1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:background="@drawable/bg_tophome"
                tools:ignore="MissingConstraints">

                <ImageButton
                    android:id="@+id/fragset_btcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:src="@drawable/ic_cart" />

                <ImageButton
                    android:id="@+id/fragset_btmessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/fragset_btcart"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:src="@drawable/ic_message" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fragset_btcart">

                    <ImageView
                        android:id="@+id/ic_prof"
                        android:layout_width="wrap_content"
                        android:layout_height="68dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="70dp"
                        android:src="@drawable/ic_account_white" />

                    <TextView
                        android:id="@+id/tam_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingTop="8dp"
                        android:text="Nama"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toRightOf="@id/ic_prof"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tam_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="example@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toRightOf="@id/ic_prof"
                        app:layout_constraintTop_toBottomOf="@id/tam_nama" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/relast1"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/tam_btakun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <ImageView
                    android:id="@+id/ic_akun"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/txt_akun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_akun"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Akun"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_kmn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/card_akun"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/tam_btkeamanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <ImageView
                    android:id="@+id/ic_kmn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_security" />

                <TextView
                    android:id="@+id/txt_kmn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_kmn"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Keamanan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/card_kmn"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/tam_btalamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <ImageView
                    android:id="@+id/ic_as"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_address" />

                <TextView
                    android:id="@+id/txt_as"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_as"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Alamat Saya"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/card_as"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/tam_btlogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent" />

                <ImageView
                    android:id="@+id/ic_logout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_logout" />

                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_logout"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Log out"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
