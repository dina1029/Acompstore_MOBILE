<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="525dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/abu">

    <TextView
        android:id="@+id/txt_alertemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Email"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/rela_alertemail"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_alertemail"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_inputlogin">

        <TextView
            android:id="@+id/tam_alertemail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:padding="0dp"
            android:textSize="14sp"
            app:boxBackgroundColor="@color/transparent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_alertnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rela_alertemail"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Nama"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/rela_alertnama"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/txt_alertnama"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_inputlogin"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/int_alertnama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:hint="Masukkan Nama Lengkap"
            android:padding="0dp"
            android:textSize="14sp"
            app:boxBackgroundColor="@color/transparent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_alertnotelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rela_alertnama"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_bold"
        android:text="No Telp"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/rela_alertnotelp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/txt_alertnotelp"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_inputlogin"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/int_alertnotelp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:hint="Masukkan No Telp"
            android:inputType="number"
            android:maxLength="13"
            android:padding="0dp"
            android:textSize="14sp"
            app:boxBackgroundColor="@color/transparent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_alertpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rela_alertnotelp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Masukkan Password"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/rela_alertpw"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/txt_alertpw"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_inputlogin"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="***"
            app:hintEnabled="false"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_passlogin"
            app:boxBackgroundColor="@color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/int_alertpw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:hint="Masukkan Password"
                android:maxLength="13"
                android:padding="0dp"
                android:textSize="14sp"
                app:boxBackgroundColor="@color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/rela_alertpw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_simpanakun"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius10"
            android:backgroundTint="@color/oldpurple"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_batalakun"
            android:layout_marginRight="6dp"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_batalakun"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius10"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Batal"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_simpanakun"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>