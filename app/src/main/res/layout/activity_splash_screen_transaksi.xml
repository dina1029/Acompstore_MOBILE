<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pActivity.SplashScreenTransaksi">

   <com.airbnb.lottie.LottieAnimationView
       android:id="@+id/img_picloading"
       android:layout_width="300dp"
       android:layout_height="300dp"
       android:layout_marginTop="120dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:lottie_rawRes="@raw/json_loadinggambar"
       tools:ignore="MissingConstraints"
       app:lottie_autoPlay="true"
       app:lottie_loop="true"/>

   <TextView
       android:layout_width="310dp"
       android:layout_height="80dp"
       android:fontFamily="@font/poppins_semibold"
       android:layout_marginTop="20dp"
       android:text="Silahkan Cek Di Halaman History yaaa"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/img_picloading"
       android:textAlignment="center"
       android:textColor="@color/black"
       android:textSize="20sp"
       tools:ignore="RtlCompat" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sirkel_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_picloading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_rawRes="@raw/json_sirkel1"
        tools:ignore="MissingConstraints"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

