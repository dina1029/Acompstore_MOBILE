<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pActivity.SplashScreen2"
    android:background="@color/white">

    <TextView
        android:id="@+id/lotte_wel"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:text="Selamat Datang"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/ungu"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotte_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_rawRes="@raw/json_opening"
        app:lottie_autoPlay="true"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/lotte_logo2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_splash2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/lotte_img"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/lotte_txt_logo2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/txt_splash2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/lotte_img"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>