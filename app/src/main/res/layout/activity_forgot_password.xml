<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pActivity.ForgotPasswordActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cltoplp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/forgot_btback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_arrowback"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ic_forgett"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/ic_forgetpassword"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cltoplp"
        tools:layout_editor_absoluteY="110dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/jdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_forgett"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:text="Cara Mengganti Password : "
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/no1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/oldgray"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:text="1. "
        app:layout_constraintRight_toLeftOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/jdl"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Chat ke admin dengan klik tombol dibawah."
        android:textColor="@color/oldgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/no1"
        app:layout_constraintTop_toBottomOf="@id/jdl"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/no2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/oldgray"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:text="2. "
        app:layout_constraintRight_toLeftOf="@id/txt1"
        app:layout_constraintTop_toBottomOf="@id/no1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Masukkan dengan format Email, no HP, nama, dan password yang diinginkan untuk diganti."
        android:textColor="@color/oldgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/no2"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/no3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/oldgray"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:text="3. "
        app:layout_constraintRight_toLeftOf="@id/txt3"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Admin akan melakukan check pada akunmu."
        android:textColor="@color/oldgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/no3"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/no4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="4. "
        android:textColor="@color/oldgray"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@id/txt4"
        app:layout_constraintTop_toBottomOf="@id/no3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Tunggu hingga proses selesai."
        android:textColor="@color/oldgray"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintLeft_toRightOf="@id/no4"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/no5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/oldgray"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:text="5. "
        app:layout_constraintRight_toLeftOf="@id/txt4"
        app:layout_constraintTop_toBottomOf="@id/no4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Admin akan menghubungi anda dengan password yang baru."
        android:layout_marginTop="5dp"
        android:textColor="@color/oldgray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/no5"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgot_btchatadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius10"
        android:backgroundTint="@color/oldpurple"
        android:fontFamily="@font/poppins_bold"
        android:text="Chat Admin"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>