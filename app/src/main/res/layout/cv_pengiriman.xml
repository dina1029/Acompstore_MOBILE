<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cvpengiriman_nama"
            android:scaleType="fitStart"
            android:src="@drawable/flashdisk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/cvpengiriman_jenislayanan"
            android:text="OKE"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/oldgray"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@id/cvpengiriman_nama"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cvpengiriman_harga"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15sp"
            android:text="Rp 0"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cvpengiriman_estimasi"
            app:layout_constraintTop_toTopOf="@id/cvpengiriman_jenislayanan"
            app:layout_constraintRight_toLeftOf="@id/hari"
            android:textSize="14sp"
            android:textColor="@color/oldgray"
            android:fontFamily="@font/poppins_semibold"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/hari"
            app:layout_constraintTop_toTopOf="@id/cvpengiriman_jenislayanan"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:textColor="@color/oldgray"
            android:fontFamily="@font/poppins_semibold"
            android:text=" Hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>