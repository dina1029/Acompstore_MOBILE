<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txt_alertemail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Provinsi"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:id="@+id/rela_alertemail2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_inputlogin"
                app:layout_constraintTop_toBottomOf="@+id/txt_alertemail2">

                <Spinner
                    android:id="@+id/tam_alertprov"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="7dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_alertkab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Kabupaten"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/rela_alertemail2"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:id="@+id/rela_alertkab2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_inputlogin"
                app:layout_constraintTop_toBottomOf="@id/txt_alertkab2"
                tools:ignore="MissingConstraints">

                <Spinner
                    android:id="@+id/int_alertkab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="7dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_alertkec2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Kecamatan"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/rela_alertkab2"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:id="@+id/rela_alertkec2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_inputlogin"
                app:layout_constraintTop_toBottomOf="@id/txt_alertkec2"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/int_alertkec2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:hint="Kecamatan"
                    android:padding="0dp"
                    android:textSize="14sp"
                    app:boxBackgroundColor="@color/transparent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_alertkec23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Kelurahan"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/rela_alertkec2"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:id="@+id/rela_kelu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_inputlogin"
                app:layout_constraintTop_toBottomOf="@id/txt_alertkec23"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/int_alertkelurahan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:hint="Kelurahan"
                    android:padding="0dp"
                    android:textSize="14sp"
                    app:boxBackgroundColor="@color/transparent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_alertal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Alamat"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/rela_kelu"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:id="@+id/rela_alertal2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_inputlogin"
                app:layout_constraintTop_toBottomOf="@id/txt_alertal2"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/int_alertal2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="clip_horizontal"
                    android:hint="Alamat"
                    android:padding="0dp"
                    android:textSize="15sp"
                    app:boxBackgroundColor="@color/transparent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_alertkec24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Masukkan Password"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/rela_alertal2"
                tools:ignore="MissingConstraints" />
            <RelativeLayout
                android:id="@+id/relapass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_inputlogin"
                app:layout_constraintTop_toBottomOf="@id/txt_alertkec24"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_passlogin"
                    android:hint="***"
                    app:boxBackgroundColor="@color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/int_alertpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_vertical"
                        android:hint="***"
                        android:inputType="textPassword"
                        android:minLines="4"
                        android:padding="0dp"
                        android:textSize="14sp"
                        app:boxBackgroundColor="@color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
