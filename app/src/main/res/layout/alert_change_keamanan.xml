<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/abu"
    android:paddingBottom="20dp">



    <TextView
        android:id="@+id/txt_alertpwlama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Masukkan Password Lama"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/rela_alertpwlama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_inputlogin"
        app:layout_constraintTop_toBottomOf="@id/txt_alertpwlama"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_passlogin"
            android:hint="***"
            app:boxBackgroundColor="@color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/int_alertpwlama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:hint="***"
                android:inputType="textPassword"
                android:minLines="4"
                android:padding="0dp"
                android:textSize="14sp"
                app:boxBackgroundColor="@color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_alertpwbaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Masukkan Password Baru"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/rela_alertpwlama"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/rela_alertpwbaru"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_inputlogin"
        app:layout_constraintTop_toBottomOf="@id/txt_alertpwbaru"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_passlogin"
            android:hint="***"
            app:boxBackgroundColor="@color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/int_alertpwbaru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:hint="***"
                android:inputType="textPassword"
                android:minLines="4"
                android:padding="0dp"
                android:textSize="14sp"
                app:boxBackgroundColor="@color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rela_alertpwbaru">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_simpanpw"
            android:layout_width="130dp"
            android:layout_height="40dp"

            android:layout_marginRight="6dp"
            android:background="@drawable/radius10"
            android:backgroundTint="@color/oldpurple"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/btn_batalpw"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_batalpw"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/radius10"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Batal"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/btn_simpanpw"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>