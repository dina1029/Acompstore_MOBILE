<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pActivity.UbahDataAkunActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cltopst"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ak_btback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="4dp"
                android:padding="3dp"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_arrowback"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:text="Data Akun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:background="@color/younggray"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/txtEmailst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Email"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/cltopst"/>

        <RelativeLayout
            android:id="@+id/rela1"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/txtEmailst"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_inputlogin">

            <TextView
                android:id="@+id/ak_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:boxBackgroundColor="@color/transparent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/set_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rela1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Nama"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/rela2"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/set_nama"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_inputlogin">

            <TextView
                android:id="@+id/ak_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:hint="Username"
                android:padding="12dp"
                android:textSize="15sp"
                app:boxBackgroundColor="@color/transparent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/set_notelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rela2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_bold"
            android:text="No Telp"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/rela3"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/set_notelp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_inputlogin">

            <TextView
                android:id="@+id/ak_notelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:hint="No Telp"
                android:padding="12dp"
                android:textSize="15sp"
                app:boxBackgroundColor="@color/transparent" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_ubah"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/radius10"
            android:backgroundTint="@color/oldpurple"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:text="Ubah Data Akun"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/rela3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
