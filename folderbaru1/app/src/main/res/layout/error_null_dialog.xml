<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/strokeradius15"
    android:backgroundTint="@color/white">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/gambar"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/cross"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:id="@+id/nulldialog_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Email kosong"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gambar" />

    <TextView
        android:id="@+id/nulldialog_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Mohon lengkapi data anda dengan benar"
        android:textAlignment="center"
        android:textColor="@color/oldgray"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nulldialog_header" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nulldialog_btclose"
        app:layout_constraintTop_toBottomOf="@id/nulldialog_body"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/radius10"
        android:backgroundTint="@color/red"
        android:text="Close"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:layout_marginTop="9dp"
        android:layout_width="120dp"
        android:layout_height="35dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nulldialog_btclose"
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>